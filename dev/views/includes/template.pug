block config
  include config
include ../mixins/mixin

doctype
html(lang=en)
  head
    //- ${pages[0].normalize('NFD').replace(/[\u0300-\u036f]/g,"")} quitar acentos
    title= `${currentPage} | ${siteName}`
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1')
    meta(name='description' content=description)
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous")
    link(rel='stylesheet' href='/assets/css/styles.css')
  body
    header.header: .l-main-container.main-header
      .main-header__logo: a(href='/')
        img(src='/assets/img/logo.png' alt='Logo')
      nav: ul.main-menu#mainMenu
        each page in pages
          li.main-menu__item: a.main-menu__link(href= `/${page.normalize('NFD').replace(/[\u0300-\u036f]/g,"").toLowerCase().split(" ").join("-")}`)= page
      <i class="fas fa-bars main-header__hamburger-icon" id="hamburgerButton"></i>
    main.main
      block content
    script(src="/assets/js/script.js")
      
    footer.main-footer: .l-main-container.main-footer__data
      .main-footer__contact
        h2.main-footer__title Contacto
        ul.main-footer__info
          +contact('address', 'fas fa-map-marker-alt', 'Av. Solidaridad 3, Pri, 33825 Hidalgo del Parral, Chih.')
          +contact('phone', 'fas fa-phone', '01 627 522 6081')
      .main-footer__logo: img(src='/assets/img/logo.png' alt='Logo')